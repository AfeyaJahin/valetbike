<div class="page-section flexbox vertical stretch">
  <div class="section-inner flexbox vertical stretch">
    <div class="section-title">
    Rental Details
    </div>   
   
    <%= render(partial: "/renting/countdown", object: @renting, as: :renting)%>
    <%= render(partial: "/stations/station_row", object: @station, as: :station) %>
    <table summary="Renting details">
      <tr>
        <th>User</th>
        <td>Name here</td>
      </tr>
      <tr>
        <th>Start Time</th>
        <td><%= @renting[:startTime].to_fs(:long) %></td>
      </tr>
      <tr>
        <th>End Time</th>
      <td><%= @renting[:endTime].to_fs(:long) %></td>
    </tr>
      <tr>
        <th>Status</th>
        <td><%= @renting.status? ? 'End' : 'In-Progress' %></td>
      </tr>
      <tr>
        <th>Start Station</th>
        <td><%= @renting.current_station_name%></td>
      </tr>
      
    </table>

    </div>
	</div>
</div>

