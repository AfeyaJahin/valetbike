    <%= form.label :additional_information %><br>
    <%= form.text_field :additional_information , class: "form-control" , class: "info"  %>
    </div> 

  <div class ="mb-3">
    <%= form.submit "Submit", class: "form-control", class: "lower_section_button"%>
