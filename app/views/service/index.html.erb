      .container {
          width: 90%;
          height: auto;
          display: flex;
          flex-direction: row;
          flex-wrap: wrap;
          justify-content: space-around;
        }

      .lower_section_button{
        background-color: #8C1627;
        padding: 7px 20px;
        border-radius: 6px;
        color: white;
        margin: auto;
      }

      .container {
        width: viewport;
        height: auto;
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        justify-content: space-around;
      }

