      p {
        font-family: inter;
        font-size: 12px;
        color: black;
      }

      .round {
        width: 100%;
        border-radius: 15px;
        border: 2px #ACACAC solid;
        padding: 5px 5px 5px 25px;
        top: 0;
        left: 0;
        z-index: 5;
              
      }

      .info
      {
        width: 100%;
        border-radius: 15px;
        border: 2px #ACACAC solid;
        border-color:#ACACAC;
        padding: 5px 5px 5px 25px;
        top: 0;
        left: 0;
        z-index: 5;
        height:200px;
        font-size:14pt;
      }

      .header_p{
        font-size: 20px;
      }

      .left_column{
        width: 50%;
        float: left;
          
      }
      .right_column{
        width: 50%;
        float: right;

      }  
        
      .alert-success {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        z-index: 9999;
        color: #155724;
        background-color: #d4edda;
        border-color: #c3e6cb;
        padding: 0.75rem 1.25rem;
        margin-bottom: 1rem;
        border: 1px solid transparent;
        border-radius: 0.25rem;
        position: top;
      }

      .alert-danger {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        z-index: 9999;
        color: #721c24;
        background-color: #f8d7da;
        border-color: #f5c6cb;
        padding: 0.75rem 1.25rem;
        margin-bottom: 1rem;
        border: 1px solid transparent;
        border-radius: 0.25rem;
      }
    </style>
  </head>

  
 

  <body>
  <div class ="div1">
  <h1 line-height = "2em" >Service Requests </h1>
  <br>
  <p class="header_p">Had an issue with your bike? Submit a service request </p>
  <br>
  </div>

  <div class ="container">

  <%= form_with model: @service, url: service_path, method: :post do |form| %>
  <% if @service && @service.errors.any? %>
    <div class= "alert alert-danger" >
    <% @service.errors.full_messages.each do |message| %>
      <div> <%= message %> </div> 
    <% end %>
    </div>
  <% end %>

  <div class ="mb-3">
      <%= form.label :name %><br>
      <%= form.text_field :name,  class: "round" , required: true%>
      </div>

    <div class ="mb-3">
      <%= form.label :email %><br>
      <%= form.text_field :email , class: "form-control", class: "round", type: "email", required: true, placeholder: "jane@gmail.com" %>
      </div>

      <div class ="mb-3">
      <%= form.label :bike_number %><br>
      <%= form.text_field :bike_number , class: "form-control" , class: "round", required: true  %>
      </div>

      <div class ="mb-3">
      <%= form.label :bike_station %><br>
      <%= form.text_field :bike_station , class: "form-control", class: "round ", required: true %>
      </div>

      <div class ="mb-3">
      <%= form.label :additional_information %><br>
      <%= form.text_field :additional_information , class: "form-control" , class: "info", required: true  %>
      </div> 

    <div class ="mb-3">
      <%= form.submit "Submit", class: "form-control", class: "lower_section_button"%>
      </div>



  <% end %>
  </div>
